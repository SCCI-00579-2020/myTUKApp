<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateProfileActivity"
    android:background="@color/light_grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView_update_pic_head"
            android:text="You can update your details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_update_name"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            android:layout_below="@+id/textView_update_pic_head"
            android:text="Name"
            android:textColor="@color/navy_blue"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_update_name"
            android:id="@+id/editText_update_name"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_update_course"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:layout_below="@+id/editText_update_name"
            android:text="Course"
            android:textColor="@color/navy_blue"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_update_course"
            android:id="@+id/editText_update_course"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="text"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_update_year"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:layout_below="@+id/editText_update_course"
            android:text="Year"
            android:textColor="@color/navy_blue"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_update_year"
            android:id="@+id/editText_update_year"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="text"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_update_phone"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:layout_below="@+id/editText_update_year"
            android:text="Phone"
            android:textColor="@color/navy_blue"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_update_phone"
            android:id="@+id/editText_update_phone"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="phone|number"
            android:background="@drawable/border"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:id="@+id/button_update_profile"
            android:layout_below="@id/editText_update_phone"
            android:layout_marginTop="20dp"
            android:paddingLeft="70dp"
            android:layout_marginRight="70dp"
            android:paddingRight="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update profile picture"
            android:id="@+id/button_update_profilePic"
            android:layout_below="@id/button_update_profile"
            android:layout_marginTop="20dp"
            android:paddingLeft="70dp"
            android:layout_marginRight="70dp"
            android:paddingRight="70dp"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:id="@+id/progressBar"
            android:visibility="gone"/>



    </RelativeLayout>


</ScrollView>