<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TUKTradeCircle"
        tools:targetApi="31">
        <activity
            android:name="com.example.tuktradecircle.activities.ConditionsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.ChatActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.PostActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.UpdateProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.UploadProfilePicActivity"
            android:exported="false" />

        <activity
            android:name="com.example.tuktradecircle.activities.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.SplashActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tuktradecircle.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Firebase Messaging service -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name="com.example.tuktradecircle.activities.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>